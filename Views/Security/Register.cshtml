@model Communal1.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class=" bodyRegister">
    <div style=" margin-left:500px;">
        <div>
            <img src="~/Content/Images/Anchor1.jpg" alt=" C1 Logo" />
        </div>
        @if (Model != null && !string.IsNullOrWhiteSpace(Model.Message))
        {
             <p style="font-weight:bold;">
                 @Model.Message
             </p>
        }
        <div>
            @Html.ValidationSummary()
        </div>
        <fieldset style=" width:300px;">
            <legend>Register form</legend>
            @using (Html.BeginForm())
            {
                <table>
                    <tr>
                        <td>@Html.LabelFor(c => c.FirstName, "FirstName:")</td>
                        <td>@Html.TextBoxFor(c => c.FirstName)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(c => c.LastName, "LastName:")</td>
                        <td>@Html.TextBoxFor(c => c.LastName)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(c => c.Email, "Email:")</td>
                        <td>@Html.TextBoxFor(c => c.Email)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(c => c.Password, "Password:")</td>
                        <td>@Html.PasswordFor(c => c.Password)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(c => c.ConfirmPassword, "ConfirmPassword:")</td>
                        <td>@Html.PasswordFor(c => c.ConfirmPassword)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Register" />
                            <input type="reset" value="Reset" />
                        </td>
                    </tr>
                </table>
            }
        </fieldset>
        <div style=" margin-left:100px;">
            @Html.ActionLink("Redirect to Logon", "Logon")
        </div>
    </div>
</body>
