@model Communal1.ViewModels.LogonViewModel
@{
    ViewBag.Title = "Logon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class=" bodyLogon">
	<div style=" margin-left: 550px; margin-top: 250px;">
		<fieldset style=" width:300px;">
			<legend>Login form</legend>
			<div>
				@Html.ValidationSummary()
			</div>
			@using (Html.BeginForm())
			{
				<table>
					<tr>
						<td>@Html.LabelFor(c => c.UserName, "UserName:")</td>
						<td>@Html.TextBoxFor(c => c.UserName)</td>
					</tr>
					<tr>
						<td>@Html.LabelFor(c => c.Password, "Password:")</td>
						<td>@Html.PasswordFor(c => c.Password)</td>
					</tr>
					<tr>
						<td></td>
						<td>
							<input type="submit" value=" Login" />
							<input type="reset" value="Reset" />
						</td>
					</tr>
				</table>
			}
		</fieldset>
		<div>
			@Html.ActionLink("SignUp", "Register")
		</div>
	</div>
</body>
